generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int           @id @default(autoincrement())
  uid      String        @unique(map: "unique_uid")
  name     String?
  email    String?
  expenses Expense[]
  settings UserSettings?

  @@index([uid])
  @@map("user")
}

model Expense {
  id          String             @id @default(uuid())
  name        String
  price       Decimal
  billingDay  Int?
  user        User               @relation(fields: [userId], references: [uid])
  userId      String
  type        ExpenseType        @default(OTHER)
  billingType ExpenseBillingType @default(MONTHLY)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("expense")
}

model UserSettings {
  id             String   @id @default(uuid())
  user           User     @relation(fields: [userId], references: [uid])
  userId         String   @unique
  currency       String?
  emergencyFund  Decimal?
  savingsRate    Int?
  investmentRate Int?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("userSettings")
}

model UserMonthlyExpenses {
  id        String   @id @default(uuid())
  userId    String
  value     Decimal
  month     Month
  createdAt DateTime @default(now())
}

enum ExpenseType {
  CLOTHING
  ENTERTAINMENT
  FOOD
  HOBBIES
  HOUSING
  INSURANCE
  MEDICAL
  TRAVEL
  UTILITIES
  OTHER
}

enum ExpenseBillingType {
  ANNUAL
  MONTHLY
}

enum Month {
  JANUARY
  FEBRUARY
  MARCH
  APRIL
  MAY
  JUNE
  JULY
  AUGUST
  SEPTEMBER
  OCTOBER
  NOVEMBER
  DECEMBER
}
