generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = ""
}

model User {
  id       Int           @id @default(autoincrement())
  uid      String        @unique(map: "unique_uid")
  name     String?
  email    String?
  expenses Expense[]
  settings UserSettings?

  @@index([uid])
  @@map("user")
}

model Expense {
  id         String      @id @default(uuid())
  name       String
  price      Decimal
  billingDay Int
  user       User        @relation(fields: [userId], references: [id])
  userId     Int
  type       ExpenseType @default(OTHER)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("expense")
}

model UserSettings {
  id       String  @id @default(uuid())
  user     User    @relation(fields: [userId], references: [id])
  userId   Int     @unique
  currency String?

  @@map("userSettings")
}

enum ExpenseType {
  CLOTHING  
  ENTERTAINMENT
  FOOD
  HOBBIES
  HOUSING
  INSURANCE
  MEDICAL
  TRAVEL
  UTILITIES
  OTHER
}
